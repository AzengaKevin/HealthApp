<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".ui.AddRecommendationsActivity">

    <Spinner
            android:layout_width="256dp"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:entries="@array/categories"
            android:padding="8dp"
            android:id="@+id/sectionSpinner"/>

    <ImageView android:layout_width="96dp"
               android:id="@+id/recImage"
               android:layout_height="96dp"
               android:layout_marginTop="@dimen/dimen_16dp"
               android:scaleType="centerCrop"
               android:background="@android:color/black"
               android:contentDescription="Rec Image"/>

    <EditText android:layout_width="256dp"
              android:layout_marginTop="@dimen/dimen_16dp"
              android:inputType="numberDecimal"
              android:id="@+id/bmiET"
              android:hint="Body Mass Index"
              android:paddingStart="@dimen/dimen_16dp"
              android:paddingEnd="@dimen/dimen_16dp"
              android:layout_height="wrap_content"/>


    <EditText android:layout_width="256dp"
              android:layout_marginTop="@dimen/dimen_16dp"
              android:inputType="numberDecimal"
              android:id="@+id/bslET"
              android:hint="Blood Sugar Level"
              android:visibility="gone"
              android:paddingStart="@dimen/dimen_16dp"
              android:paddingEnd="@dimen/dimen_16dp"
              android:layout_height="wrap_content"/>


    <EditText android:layout_width="256dp"
              android:layout_marginTop="@dimen/dimen_16dp"
              android:inputType="numberDecimal"
              android:id="@+id/systoleET"
              android:hint="Systole..."
              android:visibility="gone"
              android:paddingStart="@dimen/dimen_16dp"
              android:paddingEnd="@dimen/dimen_16dp"
              android:layout_height="wrap_content"/>


    <EditText android:layout_width="256dp"
              android:layout_marginTop="@dimen/dimen_16dp"
              android:inputType="numberDecimal"
              android:id="@+id/diastoleET"
              android:hint="Diastole..."
              android:visibility="gone"
              android:paddingStart="@dimen/dimen_16dp"
              android:paddingEnd="@dimen/dimen_16dp"
              android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="256dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/recContent"
                android:paddingStart="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_16dp"
                android:layout_height="wrap_content"
                android:inputType="textImeMultiLine"
                android:hint="Recommendation..."/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:id="@+id/addButton"
            android:text="Add"
            android:background="@drawable/primary_btn"/>


</LinearLayout>